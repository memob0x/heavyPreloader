<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8" />
    <title>Loader.js: {{@folder}}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link href="/{{@path}}/dist/index.css" rel="stylesheet" />
</head>

<body>
    <div id="root">
        <div class="topbar">
            <div class="topbar-inner">
                <h1 class="topbar-title">
                    Loader.js:

                    <span class="label">
                        <span>
                            {{@folder}}
                        </span>
                    </span>
                </h1>
            </div>
        </div>

        <div class="contents">
            <section class="contents-inner">
                <div class="contents-body">
                    <article class="contents-article">
                        {{#block "intro"}}{{/block}}
                    </article>

                    <div class="contents-demo">
                        {{#block "demo"}}{{/block}}
                    </div>
                </div>

                <aside class="contents-sidebar">
                    {{#block "sidebar"}}{{/block}}
                </aside>
            </section>
        </div>
    </div>

    <script>
        function shimport(src) {
            try {
                new Function('import("' + src + '")')();
            } catch (e) {
                var s = document.createElement("script");
                s.src = "https://unpkg.com/shimport";
                s.dataset.main = src;
                document.head.appendChild(s);
            }
        }

        shimport("/{{@path}}/src/index.mjs");
    </script>
</body>

</html>